@model GroupProjectWeb.Models.Restaurant.RestaurantFullViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ImageThumbnail)
        </dt>

        <dd>
            <img src="@Html.Raw(Model.ImageThumbnail)" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

    </dl>
</div>

</p>
<p>
    @Html.ActionLink("Create New Review", "Create", "Reviews", new { restaurantName = Model.Name, restaurantId = Model.RestaurantId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Reviews)
        </th>
    </tr>

    @foreach (var item in Model.Reviews)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.PostedDate)
            </td>
            <td>
                @Html.DisplayFor(model => item.Reviewer)
            </td>
            <td>
                @Html.DisplayFor(model => item.Description)
            </td>

            <td>
                @Html.DisplayFor(model => item.Grade)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RestaurantId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
